<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/esn_cyan</item>
        <item name="colorPrimaryDark">@color/esn_dark_blue</item>
        <item name="colorAccent">@color/esn_magenta</item>
    </style>

    <style name="NoTittleBarTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoTittleBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="profile_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/profile_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="event_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/TitleInfo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="event_date">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/Subtitle</item>
    </style>

    <style name="drawer_list_item">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_name</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored
        </item>
        <item name="colorAccent">#FFAB40</item>
    </style>

    <style name="NoTittleBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoTittleBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
